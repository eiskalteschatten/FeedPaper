<div class="post-content js-post-content">
    <div class="post-content-placeholder js-post-content-placeholder no-feeds">
        {% trans %}no_post_selected{% endtrans %}
    </div>
    <div class="post-content-column js-post-content-column">
        <div class="post-header">
            <a class="post-title js-post-title" target="_blank"></a>
            <div class="post-feed js-post-feed"></div>
            <div class="post-author js-post-author"></div>
            <div class="post-date js-post-date"></div>
        </div>
        <div class="post-body js-post-body"></div>
        <a class="post-link js-post-link btn btn-default" target="_blank">{% trans %}visit_website{% endtrans %}</a>
        <div class="post-footer">
            <a href="#" onclick="markPostAsUnread()" class="mark-as-unread js-mark-as-unread">{% trans %}mark_as_unread{% endtrans %}</a>
            <a href="#" onclick="markPostAsRead()" class="mark-as-read js-mark-as-read">{% trans %}mark_as_read{% endtrans %}</a>
        </div>
    </div>
</div>