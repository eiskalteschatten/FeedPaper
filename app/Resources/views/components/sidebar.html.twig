<div class="sidebar js-sidebar">
    <div class="section logo">
        <img src="{{ asset('resources/img/logo.svg') }}">
    </div>
    <div class="section toolbar">
        <a href="#" onclick="openPopup('{{ path('feedsAddFeedForm') }}', 'add-feed')" title="{% trans %}add_new_feed{% endtrans %}" data-toggle="tooltip" data-placement="bottom"><span class="glyphicon glyphicon-plus"></span></a>
        <a href="#" onclick="openPopup('{{ path('foldersAddFolderForm') }}', 'add-folder')" title="{% trans %}add_folder{% endtrans %}" data-toggle="tooltip" data-placement="bottom"><span class="glyphicon glyphicon-folder-open"></span></a>
        <a href="#" onclick="refreshAllFeeds()" data-refresh-url="{{ path('postsRefresh') }}" id="refreshButton" title="{% trans %}refresh{% endtrans %}" data-toggle="tooltip" data-placement="bottom"><span class="glyphicon glyphicon-refresh" id="refreshButtonIcon"></span></a>
        <a href="#" onclick="markAllAsRead('{{ path('postsMarkAllAsRead') }}')" title="{% trans %}mark_all_as_read{% endtrans %}" data-toggle="tooltip" data-placement="bottom"><span class="glyphicon glyphicon-ok"></span></a>
    </div>
    <div class="section">
        <a href="#" onclick="showFilterAllUnread()" id="allUnreadFilterLink" class="full-link js-full-link"><span class="glyphicon glyphicon-list-alt"></span>{% trans %}all_unread{% endtrans %}</a>
        <a href="#" onclick="showFilterToday()" id="todayFilterLink" class="full-link js-full-link"><span class="glyphicon glyphicon-calendar"></span>{% trans %}today{% endtrans %}</a>
        <a href="#" onclick="showFilterAllFeeds()" id="allFeedsFilterLink" class="full-link js-full-link"><span class="glyphicon glyphicon-list"></span>{% trans %}all_feeds{% endtrans %}</a>
    </div>
    <div class="section">
        {% for feed in feedsWithoutFolders %}
            <a href="#" class="full-link js-full-link js-feed-filter-link" data-id="{{ feed.id }}">
                {% if feed.icon is not empty %}
                    <img src="{{ feed.icon }}" class="feed-favicon">
                {% else %}
                    <span class="glyphicon glyphicon-globe"></span>
                {% endif %}
                {{ feed.name }}
            </a>
        {% endfor %}

        {% for folder in folders %}
            <a href="#" class="full-link js-full-link js-folder-filter-link" data-id="{{ folder.id }}"><span class="glyphicon glyphicon-folder-close"></span>{{ folder.name }}</a>
            {% for feed in folder.feeds %}
                <a href="#" class="full-link js-full-link js-feed-filter-link indented" data-id="{{ feed.id }}">
                    {% if feed.icon is not empty %}
                        <img src="{{ feed.icon }}" class="feed-favicon">
                    {% else %}
                        <span class="glyphicon glyphicon-globe"></span>
                    {% endif %}
                    {{ feed.name }}
                </a>
            {% endfor %}
        {% endfor %}
    </div>
</div>